    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_search"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.59dp"
            android:background="@color/white"
            android:src="@drawable/ic_lupa" />

        <TextView
            android:id="@+id/txt_search"
            android:layout_width="198.66dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12.35dp"
            android:layout_marginTop="16dp"
            android:text="Buscador de vehiculos"
            android:textColor="#A8A8A8"
            android:textSize="12sp"></TextView>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_categorias"
        android:layout_width="341dp"
        android:layout_height="400dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/fira_sans_black"
        android:gravity="top"
        android:text="Marcas"
        android:textColor="#0D0D0D"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rec_marcas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_categorias" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_marcas"
        android:layout_width="341dp"
        android:layout_height="130dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="36dp"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>